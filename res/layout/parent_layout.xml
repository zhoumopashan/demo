<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/second_bk"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/icon_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/glass_bk" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/glass_above" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="家长管理"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/push_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:text="图片推送"
        android:textColor="@drawable/setting_word_btn"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/setting_bright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:text="亮度调节"
        android:textColor="@drawable/setting_word_btn"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/setting_volumn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:text="音量调节"
        android:textColor="@drawable/setting_word_btn"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/persional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:text="自定义"
        android:textColor="@drawable/setting_word_btn"
        android:textSize="25dp"
        android:textStyle="bold" />

</LinearLayout>